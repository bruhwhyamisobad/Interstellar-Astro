{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

  "assists": {
    "actions": {
      "source": {
        "fixAll": true
      }
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      }
    },
    "include": ["**", "!pnpm-lock.yaml", "!dist/**", "!node_modules/**", "!assets/bundled/**", "!.astro/**"]
  },

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 320,
    "attributePosition": "auto",
    "include": ["**", "!pnpm-lock.yaml", "!dist/**", "!node_modules/**", "!assets/bundled/**", "!.astro/**"]
  },

  "javascript": {
    "formatter": {
      "enabled": true
    }
  },

  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 3
    },
    "linter": {
      "enabled": true
    }
  },

  "overrides": [
    {
      "include": ["**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
